@model IEnumerable<Store.Models.Car>
@{
    ViewBag.Title = "Список автомобилей";
}
<a asp-action="Create">Добавить автомобиль</a>
<table class="table">

    @foreach (var car in Model)
    {
        <tr>
            <td>@car.Name</td>
            <td>@car.CategoryID</td>
            <td>@car.ShortDescription</td>
            <td>@car.Price</td>
            <td>@car.isFavourite</td>
            <td>
                <form asp-action="Delete" asp-route-id="@car.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@car.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>